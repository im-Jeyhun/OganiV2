@using OganiWebApp.Areas.Client.ViewComponents
@using OganiWebApp.Areas.Client.ViewModels
@model IndexViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Ogani Template">
    <meta name="keywords" content="Ogani, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Ogani | Template</title>

    <!-- Google Font -->
    <link href="~https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/client/assests/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/client/assests/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/client/assests/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/client/assests/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/client/assests/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/client/assests/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/client/assests/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/client/assests/css/style.css" type="text/css">
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Humberger Begin -->
    <div class="humberger__menu__overlay"></div>
    <div class="humberger__menu__wrapper">
        <div class="humberger__menu__logo">
            <a href="~/client/assests/#"><img src="~/client/assests/img/logo.png" alt=""></a>
        </div>
        <div class="humberger__menu__cart">
            <ul>
                <li><a asp-route="client-cart-list"><i class="fa fa-shopping-bag"></i> <span></span></a></li>
            </ul>
        </div>
        <div class="humberger__menu__widget">
            <div class="header__top__right__language">
                <img src="~/client/assests/img/language.png" alt="">
                <div>English</div>
                <span class="arrow_carrot-down"></span>
                <ul>
                    <li><a href="~/client/assests/#">Spanis</a></li>
                    <li><a href="~/client/assests/#">English</a></li>
                </ul>
            </div>
            <div class="header__top__right__auth">
                <a asp-route="client-auth-login"><i class="fa fa-user"></i> Login</a>
            </div>
        </div>
        <nav class="humberger__menu__nav mobile-menu">
            <ul>
                <li class="active"><a href="~/client/assests/./index.html">Home</a></li>
                <li><a href="~/client/assests/./shop-grid.html">Shop</a></li>
                <li><a href="~/client/assests/./blog.html">Blog</a></li>
                <li><a href="~/client/assests/./contact.html">Contact</a></li>
            </ul>
        </nav>
        <div id="mobile-menu-wrap"></div>
        <div class="header__top__right__social">
            <a href="~/client/assests/#"><i class="fa fa-facebook"></i></a>
            <a href="~/client/assests/#"><i class="fa fa-twitter"></i></a>
            <a href="~/client/assests/#"><i class="fa fa-linkedin"></i></a>
            <a href="~/client/assests/#"><i class="fa fa-pinterest-p"></i></a>
        </div>
        <div class="humberger__menu__contact">
            <ul>
                <li><i class="fa fa-envelope"></i> hello@colorlib.com</li>
                <li>Free Shipping for all Order of $99</li>
            </ul>
        </div>
    </div>
    <!-- Humberger End -->
    <!-- Header Section Begin -->
    @await Component.InvokeAsync(nameof(Header))
    <!-- Hero Section End -->
    <!-- Categories Section Begin -->
    <section class="categories">
        <div class="container">
            <div class="row">
                <div class="categories__slider owl-carousel">
                    @foreach (var slider in Model.Sliders)
                    {
                        <div class="col-lg-3">
                            <div class="categories__item set-bg" data-setbg="/@slider.BgImageNameUrl">
                                <h5><a >@slider.Title</a></h5>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </section>
    <!-- Categories Section End -->
    <!-- Featured Section Begin -->
    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Featured Product</h2>
                    </div>
                    <div class="featured__controls">
                        <ul>
                            <li class="active" data-filter="*">All</li>
                            <li data-filter=".oranges">Oranges</li>
                            <li data-filter=".fresh-meat">Fresh Meat</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row featured__filter">
                @await Component.InvokeAsync(nameof(FeuturedProduct))
            </div>
        </div>
    </section>
    <!-- Featured Section End -->
    <!-- Banner Begin -->
    <div class="banner">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="banner__pic">
                        <img src="~/client/assests/img/banner/banner-1.jpg" alt="">
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="banner__pic">
                        <img src="~/client/assests/img/banner/banner-2.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Banner End -->
    <!-- Latest Product Section Begin -->
    <section class="latest-product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="latest-product__text">
                        <h4>Latest Products</h4>
                        <div class="latest-product__slider owl-carousel">
                            @foreach (var product in Model.Products)
                            {
                                <div class="latest-prdouct__slider__item">

                                    @foreach (var productItem in product)
                                    {
                                        <a asp-route="client-shop-item" asp-route-id="@productItem.Id" class="latest-product__item">
                                            <div class="latest-product__item__pic">
                                                <img src="~/@productItem.MainImageUrl" alt="">
                                            </div>
                                            <div class="latest-product__item__text">
                                                <h6>@productItem.Name</h6>
                                                <span>$@productItem.Price</span>
                                            </div>
                                        </a>

                                    }

                                </div>
                            }
                          
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="latest-product__text">
                        <h4>Top Rated Products</h4>
                        <div class="latest-product__slider owl-carousel">
                            @foreach (var product in Model.Products)
                            {
                                <div class="latest-prdouct__slider__item">

                                    @foreach (var productItem in product)
                                    {
                                        <a asp-route="client-shop-item" asp-route-id="@productItem.Id"class="latest-product__item">
                                            <div class="latest-product__item__pic">
                                                <img src="~/@productItem.MainImageUrl" alt="">
                                            </div>
                                            <div class="latest-product__item__text">
                                                <h6>@productItem.Name</h6>
                                                <span>$@productItem.Price</span>
                                            </div>
                                        </a>
                                    }

                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="latest-product__text">
                        <h4>Review Products</h4>
                        <div class="latest-product__slider owl-carousel">
                            @foreach (var product in Model.Products)
                            {
                                <div class="latest-prdouct__slider__item">

                                    @foreach (var productItem in product)
                                    {
                                        <a asp-route="client-shop-item" asp-route-id="@productItem.Id" class="latest-product__item">
                                            <div class="latest-product__item__pic">
                                                <img src="~/@productItem.MainImageUrl" alt="">
                                            </div>
                                            <div class="latest-product__item__text">
                                                <h6>@productItem.Name</h6>
                                                <span>$@productItem.Price</span>
                                            </div>
                                        </a>
                                    }

                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Latest Product Section End -->
    <!-- Blog Section Begin -->
    <section class="from-blog spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title from-blog__title">
                        <h2>From The Blog</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach(var blog in Model.Blogs)
                {
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="blog__item">
                            <div class="blog__item__pic">
                                <img src="~/@blog.ThumbNailImgUrl" alt="">
                            </div>
                            <div class="blog__item__text">
                                <ul>
                                    <li><i class="fa fa-calendar-o"></i> @blog.Created.ToString("MMM dd, yyyy").ToUpper()</li>
                                    <li><i class="fa fa-comment-o"></i> 5</li>
                                </ul>
                                <h5><a asp-route="client-blog-item" asp-route-id="@blog.Id">@blog.Title</a></h5>
                                <p>@(blog.Content.Length>100 ? blog.Content.Substring(0,100) + "..." : blog.Content)</p>
                            </div>
                        </div>
                    </div>
                }
             
            </div>
        </div>
    </section>
    <!-- Blog Section End -->
    <!-- Footer Section Begin -->
    <footer class="footer spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="footer__about">
                        <div class="footer__about__logo">
                            <a href="~/client/assests/./index.html"><img src="~/client/assests/img/logo.png" alt=""></a>
                        </div>
                        <ul>
                            <li>Address: 60-49 Road 11378 New York</li>
                            <li>Phone: +65 11.188.888</li>
                            <li>Email: hello@colorlib.com</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 offset-lg-1">
                    <div class="footer__widget">
                        <h6>Useful Links</h6>
                        <ul>
                            <li><a href="~/client/assests/#">About Us</a></li>
                            <li><a href="~/client/assests/#">About Our Shop</a></li>
                            <li><a href="~/client/assests/#">Secure Shopping</a></li>
                            <li><a href="~/client/assests/#">Delivery infomation</a></li>
                            <li><a href="~/client/assests/#">Privacy Policy</a></li>
                            <li><a href="~/client/assests/#">Our Sitemap</a></li>
                        </ul>
                        <ul>
                            <li><a href="~/client/assests/#">Who We Are</a></li>
                            <li><a href="~/client/assests/#">Our Services</a></li>
                            <li><a href="~/client/assests/#">Projects</a></li>
                            <li><a href="~/client/assests/#">Contact</a></li>
                            <li><a href="~/client/assests/#">Innovation</a></li>
                            <li><a href="~/client/assests/#">Testimonials</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="footer__widget">
                        <h6>Join Our Newsletter Now</h6>
                        <p>Get E-mail updates about our latest shop and special offers.</p>
                        <form action="#">
                            <input type="text" placeholder="Enter your mail">
                            <button type="submit" class="site-btn">Subscribe</button>
                        </form>
                        <div class="footer__widget__social">
                            <a href="~/client/assests/#"><i class="fa fa-facebook"></i></a>
                            <a href="~/client/assests/#"><i class="fa fa-instagram"></i></a>
                            <a href="~/client/assests/#"><i class="fa fa-twitter"></i></a>
                            <a href="~/client/assests/#"><i class="fa fa-pinterest"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="footer__copyright">
                        <div class="footer__copyright__text">
                            <p>
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="fa fa-heart" aria-hidden="true"></i> by <a href="~/client/assests/https://colorlib.com" target="_blank">Colorlib</a>
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            </p>
                        </div>
                        <div class="footer__copyright__payment"><img src="~/client/assests/img/payment-item.png" alt=""></div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="~/client/assests/js/jquery-3.3.1.min.js"></script>
    <script src="~/client/assests/js/bootstrap.min.js"></script>
    <script src="~/client/assests/js/jquery.nice-select.min.js"></script>
    <script src="~/client/assests/js/jquery-ui.min.js"></script>
    <script src="~/client/assests/js/jquery.slicknav.js"></script>
    <script src="~/client/assests/js/mixitup.min.js"></script>
    <script src="~/client/assests/js/owl.carousel.min.js"></script>
    <script src="~/client/assests/js/main.js"></script>



</body>

</html>