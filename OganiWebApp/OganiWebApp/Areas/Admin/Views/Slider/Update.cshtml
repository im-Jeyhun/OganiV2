@using OganiWebApp.Areas.Admin.ViewModels.Slider
@using OganiWebApp.Database.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model UpdateViewModel
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider</h4>
            <p class="card-description">
                Update slider
            </p>
            <form class="forms-sample" method="post" asp-route="admin-slider-update" asp-route-id ="@Model.Id" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title" for="exampleInputUsername1">Title</label>
                    <input asp-for="Title" type="text" class="form-control" id="exampleInputUsername1" placeholder="Title">
                </div>
                <div class="form-group">
                    <label  for="exampleInputUsername1">Current Photo</label>
                    <img src="~/@Model.BackgroundImageUrl" width="20%" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Image</label>
                    <input asp-for="BgImage" class="form-control" id="exampleInputEmail1" placeholder="Image">
                </div>
                <div class="form-group">
                    <label>Categories</label>
                    <select asp-for="PorductCategoryId" asp-items="@(new SelectList(Model.ProductCategories , nameof(ProductCategory.Id), nameof(ProductCategory.Title)))" class="form-select get-subcategories">                            </select>
                    <span asp-validation-for="PorductCategoryId" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
            </form>
        </div>
    </div>
</div>