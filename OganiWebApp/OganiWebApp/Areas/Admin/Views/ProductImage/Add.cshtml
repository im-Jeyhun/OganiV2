@using OganiWebApp.Areas.Admin.ViewModels.Product
@using OganiWebApp.Database.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ProductImageAddViewModel
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Product</h4>
            <p class="card-description">
                Add Product
            </p>
            <form class="forms-sample" method="post" asp-route="admin-product-image-add" asp-route-productId ="@Model.ProductId" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputEmail1"> Image</label>
                    <input asp-for="Image" class="form-control" id="exampleInputEmail1" placeholder="Email">
                </div>
                <div class="form-group">
                    <label>Order of Image</label>
                    <input  asp-for="Order" class="form-control">
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
            </form>
        </div>
    </div>
</div>